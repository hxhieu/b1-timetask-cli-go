  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug - GUI",
      "type": "go",
      "request": "launch",
      "mode": "exec",
      "program": "${workspaceFolder}/build/bin/b1-timetask-cli-go",
      "preLaunchTask": "build",
      "cwd": "${workspaceFolder}",
      "env": {
        "X_MODE": "1"
      }
    },
    {
      "name": "Debug - `time create`",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}",
      "args": ["time", "create", "-d", "-f"]
    },
    {
      "name": "Debug - `time clear`",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}",
      "args": ["time", "clear", "-d", "-f"]
    }
  ]
}
